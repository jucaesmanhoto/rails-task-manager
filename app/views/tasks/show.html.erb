<div class="d-flex justify-content-between">

  <div>
    <h1>
      <%= @task.title %>
    </h1>
  </div>

  <div>
    <%= link_to edit_path, class: 'btn border' do%>
      <i class="fa fa-pencil icons" id="edit-task-button" aria-hidden="true"></i>
      Edit this task
    <% end %>
  </div>

</div>

<div class="alert alert-secondary p-4" role="alert">
  <%= @task.details %>
</div>

<div class="form-check mt-4">
    <input class="form-check-input" type="checkbox" <%= @task.completed ? 'checked' : '' %>>
    <label class="form-check-label" for="defaultCheck1">
      <% if @task.completed %>
        This task is completed
      <% else %>
        This task is not completed yet
      <% end %>
    </label>
</div>

<div class="dropdown-divider my-4"></div>

<i class="fa fa-history icons" aria-hidden="true"></i>
<%= link_to 'Back to list', tasks_path %>
